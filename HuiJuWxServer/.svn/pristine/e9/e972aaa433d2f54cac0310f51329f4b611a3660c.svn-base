 <ion-view>
 <ion-content>
      <ion-list>
          <!--锁列表-->
        <div ng-repeat="device in deviceList">
          <ion-item class="item-stable"
                    ng-click="toggleGroup(device)"
                    ng-class="{active: isGroupShown(device)}">
					<span>LockID：{{device.lockId}}</span>
					<span>状态：̬{{device.locktb.state}}</span>
             <ion-option-button class="button-positive" ng-click="addKey(device.keyList, device)">添加锁</ion-option-button>
             <ion-option-button class="button-assertive" ng-click="unbindLock(device.keyList, device)">解绑锁</ion-option-button>
           <i class="icon" ng-class="isGroupShown(device) ? 'ion-minus' : 'ion-plus'"></i>
          </ion-item>
          <!-- 钥匙列表 -->
          <ion-item class="item-accordion"
                    ng-repeat="key in device.keyList"
                    ng-show="isGroupShown(device)">
				<span>keyId：{{key.keyId}}</span>
				<span>钥匙名称：{{key.keyName}}</span>
				<span>蓝牙钥匙设备ID：{{key.deviceId}}</span>
				<span>状态：{{key.state}}</span>
             <ion-option-button class="button-positive" ng-click="deleteKey(device,key)">删除</ion-option-button>
             <ion-option-button class="button-positive" ng-click="enableKey(key)">启用</ion-option-button>
             <ion-option-button class="button-positive" ng-click="disableKey(key)">禁用</ion-option-button>
          </ion-item>
        </div>
      </ion-list>
    </ion-content>
</ion-view>