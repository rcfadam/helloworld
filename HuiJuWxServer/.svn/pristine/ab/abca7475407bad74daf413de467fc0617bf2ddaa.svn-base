<html >
<head>
<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no">
<link  href="dist/css/mui.min.css" rel="stylesheet"/>
<!-- <link  href="css/style.css" rel="stylesheet"/> -->
<title>小汪智能锁</title>
 <style>
		.mui-scroll-wrapper{
		  overflow: scroll!important;
		  position:relative;
		  top:20%;
		  
		}
 </style>
</head>

<body>
  <header class="mui-bar mui-bar-nav">
      <h1 class="mui-title">授权中心</h1>
    </header>
  <div class="mui-content mui-scroll-wrapper">
 	<button type="button" class="mui-btn mui-btn-blue mui-btn-block" id="confirm">确认</button>
 	<button type="button" class="mui-btn mui-btn-grey mui-btn-block" id="cancel">取消</button>
 
  </div>
  <script type="text/javascript" src="../libs/jquery-3.1.0.min.js"></script>
 <script type="text/javascript" src="dist/js/mui.min.js"></script>
  <script src="https://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
  
 
 <script>
 $.get("/getSysInfoByUrl",{url:window.location.href},function(resp){
		wx.config({
			beta: true,
			debug: false,
			//appId:'wxb4ba14562eb9a765',   //测试   huijuwx.com
			appId: 'wxf410780b57e7f0ad',//正式 live-smart.com.cn
			timestamp: resp.timestamp,
			nonceStr: resp.noncestr,
			signature:resp.signature,
			jsApiList: ['closeWindow']
		});   			
	})
    var getURLParam = function(name){
    	var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
		var r = window.location.search.substr(1).match(reg);
		if(r!=null) {
			return  unescape(r[2]); 
		}
		return null;
    }
    
    $(document).ready(function(){
    	$("#confirm").click(function(){
    		var openId = getURLParam("openId");
    		var lockId = getURLParam("lockId");
    		$.get("/confirmlock",{openId:openId,lockId:lockId},function(resp){
    			if(resp.result_code==0){
    			  mui.toast("授权成功");
    			  wx.closeWindow();
    			}else{
    				mui.toast("用户或锁芯不存在");
    			}
    		})
    	})
    	
    	$("#cancel").click(function(){
    		var openId = getURLParam("openId");
    		var lockId = getURLParam("lockId");
    		$.get("/cancelAuth",{openId:openId,lockId:lockId},function(resp){
    			if(resp.result_code==0){
	    			mui.toast("取消操作");
    				wx.closeWindow();
    			}else{
    				mui.toast("用户或锁芯不存在");
    			}
    		})
    	}) 
    })
    
 </script>
 
</body>
</html>