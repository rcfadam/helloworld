 <ion-view>
 <ion-content>
      <ion-list>
          <!--锁列表-->
        <div ng-repeat="device in deviceList">
          <ion-item class="item-stable"
                    ng-click="toggleGroup(device)"
                    ng-class="{active: isGroupShown(device)}">
					<div class="lockimg"><span>锁</span></div>
					<div class="lock-item">
					   <h2>{{device.locktb.lockName}}</h2>
					   <p>̬{{device.state}}</p>
					   <i class="icon" ng-class="isGroupShown(device) ? 'ion-minus' : 'ion-plus'"></i>
					</div>
             <ion-option-button class="button-positive" ng-click="addKey(device.keyList, device)">添加钥匙</ion-option-button>
             <ion-option-button class="button-assertive" ng-click="unbindLock(device.keyList, device)">解绑锁</ion-option-button>
          </ion-item>
          <!-- 钥匙列表 -->
          <ion-item class="item-accordion"
                    ng-repeat="key in device.keyList"
                    ng-show="isGroupShown(device)">
                 <div class="keyimg"><span>钥匙</span></div>
                 <div class="key-item-div">
				  <h3>{{key.keyName}}</h3>
				  <p class="key-deviceid"><span ng-show="{{key.type==1}}">蓝牙钥匙</span>
		               <span ng-show="{{key.type==3}}">电子钥匙</span> </p>
				  <p>{{key.stateStr}} &nbsp;&nbsp;  {{key.connectStatus}}</p>
				</div>
             <ion-option-button class="button-assertive key-button" ng-click="deleteKey(device,key)">删除钥匙</ion-option-button>
             <ion-option-button class="button-positive key-button" ng-click="enableKey(device,key)" ng-show="key.state!=1">启用钥匙</ion-option-button>
             <ion-option-button class="button-positive key-button" ng-click="disableKey(device,key)" ng-hide="key.state!=1">禁用钥匙</ion-option-button>
              <ion-option-button class="button-positive key-button" ng-click="keyItem(device,key)">查看详情</ion-option-button>
          </ion-item>
        </div>
        <!--  <span ng-show="isdeviceshown()">还没有绑定设备</span> -->
      </ion-list>
    </ion-content>
</ion-view>