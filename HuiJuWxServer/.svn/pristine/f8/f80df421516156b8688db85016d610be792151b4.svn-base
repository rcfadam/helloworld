<header class="mui-bar mui-bar-nav">
      <a class="mui-icon mui-action-menu mui-icon-contact mui-pull-left" href="#offCanvasSide"></a>
      <h1 class="mui-title">锁列表</h1>
    </header>
    <div class="mui-content mui-scroll-wrapper" id="devicelist">
      <div class="mui-scroll">
        <!-- 主界面具体展示内容 -->
          <ul class="mui-table-view">
              <li class="mui-table-view-cell mui-collapse mui-media"  ng-repeat="device in deviceList">
                  <div class="mui-slider-right mui-disabled lock-button">
					<!-- <button class="mui-btn mui-btn-grey " ng-click="addKey(device.keyList, device)">添加钥匙</button>
					<button class="mui-btn mui-btn-yellow " ng-click="unbindLock(device.keyList, device)">解绑锁</button> -->
				 	<button class="mui-btn mui-icon  mui-icon-gear-filled mui-edit" ng-click="edit(device.keyList,device)"></button>
				   </div>
                  <a class="mui-navigate-right mui-slider-handle" href="#">
                   <img class="mui-media-object mui-pull-left" src="img/lock.jpg"  style='width:40px;height:30px' />
                    <div class="mui-media-body">
                     	{{device.locktb.lockName}}
                     <p class="mui-ellipsis">{{device.state}}</p>
                     </div>
                  </a>
                  <div class="mui-collapse-content">
                       <ul class="mui-table-view " >
                           <li class="mui-table-view-cell mui-media" ng-repeat="key in device.keyList">
	                           <div class="mui-slider-right mui-disabled">
								<!-- <button class="mui-btn mui-btn-grey " ng-click="deleteKey(device,key)">删除钥匙</button>
								<button class="mui-btn mui-btn-yellow " ng-click="disableKey(device,key)" ng-hide="key.state!=1">禁用钥匙</button>
								<button class="mui-btn mui-btn-yellow " ng-click="enableKey(device,key)" ng-show="key.state!=1">启用钥匙</button>
								<button class="mui-btn mui-btn-red " ng-click="keyItem(device,key)">查看详情</button> -->
							    <button class="mui-btn mui-icon  mui-icon-gear-filled mui-edit " ng-click="edit(device,key)"></button>
							   </div>
                               <a    class=' mui-slider-handle'>
                                   <img class="mui-media-object mui-pull-left " src="img/key.jpg" style="width:40px;height:30px"/>
                                   <div class="mui-media-body">
                                        	{{key.keyTb.keyName}}
                                        	<p class="mui-ellipsis"><span ng-show="{{key.keyTb.type==1}}">蓝牙钥匙</span>
		               						<span ng-show="{{key.keyTb.type==3}}">电子钥匙</span> </p>
				 							 <p class="mui-ellipsis">{{key.keyTb.stateStr}} &nbsp;&nbsp; <span ng-class="{true:'connect-status',false:'unconnect-status'}[key.keyTb.connectStatus=='connected']"> {{key.keyTb.connectStatusStr}}</span><span>{{key.timeStr}}</span></p>
                                   </div>
                               </a>
                           </li>
                       </ul>
                  </div>
              </li>
          </ul>
      </div>
</div>  